                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_stroke_dash_style_dash_dot_dot_2" x:Uid="rmfi_stroke_dash_style_dash_dot_dot" Click="stroke_dash_style_click" Text="Dash Dot Dot" GroupName="gn_stroke_dash_style_2">
