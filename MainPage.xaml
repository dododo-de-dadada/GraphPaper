					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ListView>
		</Grid>

		<!--</Grid>-->
		<!-- 用紙パネル -->
		<RelativePanel Grid.Row="1" Grid.Column="0" >
			<SwapChainPanel
				x:Name="scp_sheet_panel"
				CompositionScaleChanged="sheet_panel_scale_changed"
				Loading="sheet_panel_loading"
				Loaded="sheet_panel_loaded"
				KeyboardAcceleratorPlacementMode="Hidden"
				PointerCanceled="event_canceled"
				PointerEntered="event_entered"
				PointerExited="event_exited"
				PointerMoved="event_moved"
				PointerPressed="event_pressed"
				PointerReleased="event_released"
				PointerWheelChanged="event_wheel_changed"
				RelativePanel.AlignLeftWithPanel="True"
				RelativePanel.AlignTopWithPanel="True"
				RelativePanel.AlignRightWithPanel="True"
				RelativePanel.AlignBottomWithPanel="True"
				SizeChanged="sheet_panel_size_changed"
				>
				<!--
				通常は, MenuFlyoutItem でキーボードアクセラレータを指定すべきだが,
				そうすると SwapChainPanel をクリックしたあとアクセラレーターが機能しなくなる.
				フォーカスのせいかもしれないが, 原因は不明.
				そこでこのエレメントにアクセラレーターを設定する.
				通常は, ScopeOwner をすぐ上の親に限定すべきだが, 
				そうすると, 親より上のオブジェクトは既存ではなく, 新規に作成
				されてしまう。つまり, メンバ変数にアクセスできない。
				-->
				<SwapChainPanel.KeyboardAccelerators>
					<KeyboardAccelerator Invoked="select_tool_invoked" Key="Escape" />
				</SwapChainPanel.KeyboardAccelerators>
			</SwapChainPanel>
			<ScrollBar x:Name="sb_horz" Height="Auto" IndicatorMode="MouseIndicator" IsEnabled="True" Margin="0,0,16,0" Orientation="Horizontal" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Scroll="scroll" Visibility="Visible" Width="Auto" />
			<ScrollBar x:Name="sb_vert" Height="Auto" IndicatorMode="MouseIndicator" IsEnabled="True" Margin="0,0,0,16" Orientation="Vertical" RelativePanel.AlignBottomWithPanel="true" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Scroll="scroll" Visibility="Visible" Width="Auto" />
		</RelativePanel>
		<!-- ステータスバー -->
		<StackPanel x:Name="sp_status_bar_panel" Background="{ThemeResource AppBarBackgroundThemeBrush}" Grid.Row="2" Orientation="Horizontal" Padding="8,0,8,0" >
			<!-- ステータスバーコンテキストメニュー -->
			<StackPanel.ContextFlyout>
				<MenuFlyout>
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_draw_2" x:Uid="tmfi_status_bar_draw" Click="status_bar_click" Text="Draw Tool" />
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_unit_2" x:Uid="tmfi_status_bar_unit" Click="status_bar_click" Text="Len Unit Name" />
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_pos_2" x:Uid="tmfi_status_bar_pos" Click="status_bar_click" Text="Cursor Position" />
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_grid_2" x:Uid="tmfi_status_bar_grid" Click="status_bar_click" Text="Grid Size" />
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_sheet_2" x:Uid="tmfi_status_bar_sheet" Click="status_bar_click" Text="Sheet Size" />
					<ToggleMenuFlyoutItem x:Name="tmfi_status_bar_zoom_2" x:Uid="tmfi_status_bar_zoom" Click="status_bar_click" Text="Scale" />
				</MenuFlyout>
			</StackPanel.ContextFlyout>
			<StackPanel x:Name="sp_status_bar_draw" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock  Margin="0,0,0,0" Text="draw:"/>
				<PathIcon   x:Name="pi_draw" Data="M0,0" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16">
					<PathIcon.RenderTransform>
						<ScaleTransform CenterX="8" CenterY="8" ScaleX="0.875" ScaleY="0.875" />
					</PathIcon.RenderTransform>
				</PathIcon>
			</StackPanel>
			<StackPanel x:Name="sp_status_bar_unit" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock x:Uid="tk_status_bar_unit" Text="unit:"/>
				<TextBlock x:Name="tk_status_bar_unit" Text="0"/>
			</StackPanel>
			<StackPanel x:Name="sp_status_bar_pos" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock x:Uid="tk_status_bar_pos_x" Text="x:" />
				<TextBlock x:Name="tk_status_bar_pos_x" Margin="0,0,4,0" Text="0"/>
				<TextBlock x:Uid="tk_status_bar_pos_y" Text="y:" />
				<TextBlock x:Name="tk_status_bar_pos_y" Text="0"/>
			</StackPanel>
			<StackPanel x:Name="sp_status_bar_grid" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock x:Uid="tk_status_bar_grid" Text="g:"/>
				<TextBlock x:Name="tk_status_bar_grid" Text="0" />
			</StackPanel>
			<StackPanel x:Name="sp_status_bar_sheet" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock x:Uid="tk_status_bar_sheet_w" Text="w:"/>
				<TextBlock x:Name="tk_status_bar_sheet_w" Margin="0,0,4,0" Text="0"/>
				<TextBlock x:Uid="tk_status_bar_sheet_h" Text="h:"/>
				<TextBlock x:Name="tk_status_bar_sheet_h" Text="0"/>
			</StackPanel>
			<StackPanel x:Name="sp_status_bar_zoom" Margin="0,0,12,0" Orientation="Horizontal">
				<TextBlock x:Uid="tk_status_bar_zoom" Text="z:"/>
				<TextBlock x:Name="tk_status_bar_zoom" Text="0"/>
			</StackPanel>
			<!--<TextBlock x:Name="tk_misc_status_bar_cnt" Margin="0,0,4,0" Text="0"/> -->
		</StackPanel>
		<!-- 文字列入力ダイアログ -->
		<ContentDialog x:Name="cd_edit_text_dialog" x:Uid="cd_edit_text_dialog" DefaultButton="Primary" CloseButtonText="Cancel" PrimaryButtonText="Ok">
			<StackPanel>
				<TextBox x:Name="tx_edit_text" AcceptsReturn="True" Height="128" HorizontalAlignment="Stretch" PlaceholderText="Text" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />
				<CheckBox x:Name="ck_text_frame_fit_text" x:Uid="ck_text_frame_fit_text" Content="Fit Frame Size to Text" Margin="4,4" />
			</StackPanel>
		</ContentDialog>
		<!-- 貼り付け確認ダイアログ -->
		<!--
		<ContentDialog x:Name="cd_conf_paste_dialog" x:Uid="cd_conf_paste_dialog" CloseButtonText="Cancel" DefaultButton="Close" PrimaryButtonText="Paste">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
				<FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource glyph_conf}" />
				<TextBlock x:Uid="tk_conf_paste" />
			</StackPanel>
		</ContentDialog>
		-->
		<!-- 保存確認ダイアログ -->
		<ContentDialog x:Name="cd_conf_save_dialog" x:Uid="cd_conf_save_dialog" CloseButtonText="Cancel" DefaultButton="Close" PrimaryButtonText="Save" SecondaryButtonText="Don't Save">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
				<FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource glyph_conf}" Margin="0,0,16,0" />
				<TextBlock x:Uid="tk_conf_save"/>
			</StackPanel>
		</ContentDialog>
		<!-- メッセージダイアログ -->
		<ContentDialog x:Name="cd_message_dialog" x:Uid="cd_message_dialog" CloseButtonText="Close" DefaultButton="Close">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
				<FontIcon x:Name="fi_message" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource glyph_block}" Margin="0,0,16,0"/>
				<TextBlock x:Name="tk_message"/>
			</StackPanel>
		</ContentDialog>
		<!-- 用紙の大きさ入力ダイアログ -->
		<ContentDialog x:Name="cd_sheet_size_dialog" x:Uid="cd_sheet_size_dialog" CloseButtonText="Close" DefaultButton="Close" PrimaryButtonText="Apply" SecondaryButtonText="Adjust to Shapes">
			<StackPanel >
				<TextBox x:Name="tx_sheet_width" x:Uid="tx_sheet_width" Margin="0,0,0,4" HorizontalAlignment="Stretch" VerticalAlignment="Top" Header="Width" TextChanged="sheet_size_text_changed" />
				<TextBox x:Name="tx_sheet_height" x:Uid="tx_sheet_height" Margin="0,0,0,4" HorizontalAlignment="Stretch" VerticalAlignment="Top" Header="Height" TextChanged="sheet_size_text_changed" />
				<TextBox x:Name="tx_sheet_size_max" x:Uid="tx_sheet_size_max" Margin="0,0,0,4" HorizontalAlignment="Stretch" VerticalAlignment="Top" Header="Maximum size" IsEnabled="false" />
			</StackPanel>
		</ContentDialog>
		<!-- 頂点をくっつける閾値 -->
		<ContentDialog x:Name="cd_misc_vert_stick" x:Uid="cd_misc_vert_stick" CloseButtonText="Close" DefaultButton="Close" PrimaryButtonText="Apply" >
			<StackPanel>
				<Slider x:Name="sd_misc_vert_stick" x:Uid="sd_misc_vert_stick" Maximum="127.5" Minimum="0" SnapsTo="Ticks" TickFrequency="0.5" Header="Thresholds" ValueChanged="misc_vert_stick_val_changed"/>
			</StackPanel>
		</ContentDialog>
		<!-- 属性ダイアログ -->
		<ContentDialog x:Name="cd_prop_dialog" CloseButtonText="Close" Closed="prop_dialog_closed" DefaultButton="Close" Opened="prop_dialog_opened" PrimaryButtonText="Apply" Unloaded="prop_dialog_unloaded">
			<RelativePanel>
				<SwapChainPanel
					x:Name="scp_prop_panel"
					BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}" BorderThickness="1" CornerRadius="1" Padding="1"
					CompositionScaleChanged="prop_panel_scale_changed"
					Height="170"
					Loaded="prop_panel_loaded"
					Margin="0,0,0,8"
					MaxHeight="170"
					MaxWidth="170"
					RelativePanel.AlignTopWithPanel="True"
					RelativePanel.AlignHorizontalCenterWithPanel="True"
					SizeChanged="prop_panel_size_changed"
					Width="170"
					/>
				<!-- Height を指定するこれ大事 -->
				<ListView x:Name="lv_prop_list" RelativePanel.Below="scp_prop_panel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Visibility="Collapsed" Width="256" />
				<Slider x:Name="prop_slider_0" x:Uid = "prop_slider_0" IsThumbToolTipEnabled="False" Margin="0,0,0,4" Maximum="255" Minimum="0" RelativePanel.Below="scp_prop_panel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" StepFrequency="1" Visibility="Collapsed" />
				<Slider x:Name="prop_slider_1" x:Uid = "prop_slider_1" IsThumbToolTipEnabled="False" Margin="0,0,0,4" Maximum="255" Minimum="0" RelativePanel.Below="prop_slider_0" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" StepFrequency="1" Visibility="Collapsed" />
				<Slider x:Name="prop_slider_2" x:Uid = "prop_slider_2" IsThumbToolTipEnabled="False" Margin="0,0,0,4" Maximum="255" Minimum="0" RelativePanel.Below="prop_slider_1" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" StepFrequency="1" Visibility="Collapsed" />
				<Slider x:Name="prop_slider_3" x:Uid = "prop_slider_3" IsThumbToolTipEnabled="False" Margin="0,0,0,4" Maximum="255" Minimum="0" RelativePanel.Below="prop_slider_2" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" StepFrequency="1" Visibility="Collapsed" />
				<Slider x:Name="prop_slider_4" x:Uid = "prop_slider_4" IsThumbToolTipEnabled="False" Maximum="255" Minimum="0" RelativePanel.Below="prop_slider_3" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" StepFrequency="1" Visibility="Collapsed" />
				<TextBlock x:Name="tb_version" x:Uid="tb_version" RelativePanel.Below="scp_prop_panel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Visibility="Collapsed" />
				<CheckBox x:Name="prop_check_box" x:Uid="prop_check_box" Content="Check Box" IsChecked="False" RelativePanel.Below="prop_slider_0" RelativePanel.AlignLeftWithPanel="True" Visibility="Collapsed" />
			</RelativePanel>
		</ContentDialog>
	</Grid>
</Page>
