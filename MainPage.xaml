                M4.75 11.00 L8.00 2.875 L11.25 11.00 Z
            </x:String>
            <!-- グループ解除アイコンの描画コマンド -->
            <x:String x:Key="data_ungroup">
                M1,1 L11,1 L11,11 L1,11 Z
                M2,2 L10,2 L10,10 L2,10 Z
                M11,5 L15,5 L15,15 L5,15 L5,11 L6,11 L6,14 L14,14 L14,6 L11,6 Z
            </x:String>
            <!-- 開いた矢印アイコンの描画コマンド -->
            <x:String x:Key="data_arrow_opened">
                M0, 8 L9.3, 8 L2.75, 6.52 L3, 5.48 L16, 8.5 L3, 11.52 L2.75, 10.48 L9.3, 9 L0, 9 Z
            </x:String>
            <!-- 閉じた矢印アイコンの描画コマンド -->
            <x:String x:Key="data_arrow_filled">
                M0, 8 L3, 8 L3, 5.48 L16, 8.5 L3, 11.52 L3,9 L0, 9 Z
            </x:String>
            <!-- アプリケーションデータを格納するファイル名 -->
            <x:String x:Key="file_app_data">app_data</x:String>
            <!-- 線枠コンテキストメニュー -->
            <MenuFlyout x:Key="mf_stroke">
                <MenuFlyoutSubItem x:Uid="mfsi_stroke_dash_style" Text="Style">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_stroke_dash_style_solid_2" x:Uid="rmfi_stroke_dash_style_solid" Click="stroke_dash_style_click" IsChecked="True" Text="Solid" GroupName="gn_stroke_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_line}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<MenuFlyoutSeparator />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_stroke_dash_style_dash_2" x:Uid="rmfi_stroke_dash_style_dash" Click="stroke_dash_style_click" Text="Dash" GroupName="gn_stroke_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_dash}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_stroke_dash_style_dot_2" x:Uid="rmfi_stroke_dash_style_dot" Click="stroke_dash_style_click" Text="Dot" GroupName="gn_stroke_dash_style_2">
