            <x:String x:Key="glyph_info">&#xE946;</x:String>
            <x:String x:Key="glyph_alert">&#xEA39;</x:String>
            <x:String x:Key="glyph_arrange">&#xE8CB;</x:String>
            <x:String x:Key="glyph_conf">&#xE9CE;</x:String>
            <x:String x:Key="glyph_save_as">&#xE792;</x:String>
			<x:String x:Key="glyph_recent">&#xE823;</x:String>
            <x:String x:Key="glyph_close">&#xE894;</x:String>
            <x:String x:Key="glyph_italic">&#xE8DB;</x:String>
			<x:String x:Key="glyph_ibeam">&#xE933;</x:String>
            <x:String x:Key="glyph_fit_page">&#xE9A6;</x:String>
			<x:String x:Key="glyph_draw">&#xEC87;</x:String>
			<!-- 曲線アイコンの描画コマンド -->
            <x:String x:Key="data_bezi">
                M0.560633,8.093141 C7.686753,1.656054 7.654862,15.655831 16.030224,8.749841 L15.310918,7.967942 C8.311178,14.40621 8.311178,0.405251 -0.032292,7.249824 Z
            </x:String>
            <!-- 破線アイコンの描画コマンド -->
            <x:String x:Key="data_dash">
				M0,8 L3,8 L3,9.5 L0,9.5 Z
                M6,8 L10,8 L10,9.5 L6,9.5 Z
                M13,8 L16,8 L16,9.5 L13,9.5 Z
            </x:String>
            <!-- 点線アイコンの描画コマンド -->
            <x:String x:Key="data_dot">
				M   0, 8 L 1.8, 8 L 1.8, 9.5 L   0, 9.5 Z
                M 3.5, 8 L 5.3, 8 L 5.3, 9.5 L 3.5, 9.5 Z
                M 7.1, 8 L 8.9, 8 L 8.9, 9.5 L 7.1, 9.5 Z
                M10.7, 8 L12.4, 8 L12.4, 9.5 L10.7, 9.5 Z
                M14.2, 8 L16.0, 8 L16.0, 9.5 L14.2, 9.5 Z
            </x:String>
            <!-- 一点破線アイコンの描画コマンド -->
            <x:String x:Key="data_dash_dot">
                M 0.5, 8 L 4.5, 8 L 4.5, 9.5 L 0.5, 9.5 Z
                M 7.5, 8 L 8.5, 8 L 8.5, 9.5 L 7.5, 9.5 Z
                M11.5, 8 L15.5, 8 L15.5, 9.5 L11.5, 9.5 Z
            </x:String>
            <!-- 二点破線アイコンの描画コマンド -->
            <x:String x:Key="data_dash_dot_dot">
                M   0, 8 L 2.5, 8 L 2.5, 9.5 L   0, 9.5 Z
                M 5.5, 8 L 6.5, 8 L 6.5, 9.5 L 5.5, 9.5 Z
                M 9.5, 8 L10.5, 8 L10.5, 9.5 L 9.5, 9.5 Z
                M13.5, 8 L16.0, 8 L16.0, 9.5 L13.5, 9.5 Z
            </x:String>
            <!-- だ円アイコンの描画コマンド -->
            <x:String x:Key="data_elli">
                M8,2 A8,6 0 0 1 8,14 A8,6 0 0 1 8,2 Z
                M8,3 A7,5 0 0 1 8,13 A7,5 0 0 1 8,3 Z
            </x:String>
            <!-- クループアイコンの描画コマンド -->
            <x:String x:Key="data_group">
                M0,0 L3,0 L3,1 L11,1 L11,11 L1,11 L1,3 L0,3 Z
                M3,3 L3,2 L10,2 L10,10 L2,10 L2,3 Z
                M11,5 L15,5 L15,13 L16,13 L16,16 L13,16 L13,15 L5,15 L5,11 L6,11 L6,14 L13,14 L13,13 L14,13 L14,6 L11,6 Z
                M13,0 L16,0 L16,3 L13,3 Z
                M0,13 L3,13 L3,16 L0,16 Z
            </x:String>
            <!-- 直線アイコンの描画コマンド -->
            <x:String x:Key="data_line">
                M0,8 L16,8 L16,9 L0,9 Z
            </x:String>
			<!-- 多角形アイコンの描画コマンド -->
			<x:String x:Key="data_poly">
				M8,2 L16,8 L8,14 L0,8 Z
                M8,3.33333 L14.66666,8 L8,12.66666 L1.33333,8 Z
			</x:String>
			<!-- 三角形アイコンの描画コマンド -->
			<x:String x:Key="data_tri">
				M8.000000 0.000000 l-8.000000 13.856406 l15.999999 0.000000 Z
				M8.000000 2.000000 l-6.267949 10.856406 l12.535898 0.000000 Z
			</x:String>
			<!-- ひし型アイコンの描画コマンド -->
            <x:String x:Key="data_quad">
                M8,2 L16,8 L8,14 L0,8 Z
                M8,3.33333 L14.66666,8 L8,12.66666 L1.33333,8 Z
            </x:String>
            <!-- 方形アイコンの描画コマンド -->
            <x:String x:Key="data_rect">
                M0,2 L16,2 L16,14 L0,14 Z
                M1,3 L15,3 L15,13 L1,13 Z
            </x:String>
			<!-- 五角形アイコンの描画コマンド -->
			<!--
			<x:String x:Key="data_pent">
				M8.000000 0.000000 l-8.000000 5.812340 l3.055728 9.404563 l9.888543 0.000000 l3.055729 -9.404563 Z
				M8.000000 1.236068 l-6.824533 4.958297 l2.606731 8.236068 l8.435559 0.000000 l2.606731 -8.236068 Z
			</x:String>
            -->
			<!-- 六角形アイコンの描画コマンド -->
            <!--
			<x:String x:Key="data_hexa">
				M4.000000 1.000000 l-4.000000 6.928203 l4.000000 6.928203 l8.000000 0.000000 l4.000000 -6.928203 l-4.000000 -6.928203 Z
				M4.777776 2.000000 l-3.222223 5.928203 l3.222223 5.928203 l6.444446 0.000000 l3.222223 -5.928203 l-3.222223 -5.928203 Z
			</x:String>
            -->
			<!-- 角丸方形アイコンの描画コマンド -->
            <x:String x:Key="data_rrect">
                M5,2 L11,2 A5,5 0 0 1 16,7 L16,9 A5,5, 0 0 1 11,14 L5,14 A5,5 0 0 1 0,9 L0,7 A5,5 0 0 1 5,2 Z
                M5,3 L11,3 A4,4 0 0 1 15,7 L15,9 A4,4, 0 0 1 11,13 L5,13 A4,4 0 0 1 1,9 L1,7 A4,4 0 0 1 5,3 Z
            </x:String>
            <!-- 定規アイコンの描画コマンド -->
            <x:String x:Key="data_ruler">
                M3,1 L4,1 L4,2 L8,2 L8,3 L4,3 L4,5 L6,5 L6,6 L4,6 L4,8 L8,8 L8,9 L4,9 L4,11 L6,11 L6,12 L4,12 L4,14 L13,14 L13,1 L14,1 L14,15 L3,15 Z
            </x:String>
            <!-- 図形選択アイコンの描画コマンド -->
            <x:String x:Key="data_select">
                M0,0 H1 V1 H2 V2 H3 V3 H4 V4 H5 V5 H6 V6 H7 V7 H8 V8 H9 V9 H10 V10 H11 V11 H7 V12 H8 V14 H9 V17 H6 V16 H5 V14 H4 V12 H3 V13 H2 V14 H1 V15 H0 Z
                M1,2 H2 V3 H3 V4 H4 V5 H5 V6 H6 V7 H7 V8 H8 V9 H9 V10 H6 V12 H7 V14 H8 V16 H6 V14 H5 V12 H4 V11 H3 V12 H2 V13 H1 Z
            </x:String>
            <!-- 文字列アイコンの描画コマンド -->
            <x:String x:Key="data_text">
                M1.25 16.00 L7.25 1.00 L8.75 1.00 L14.75 16.00 L13.25 16.00 L11.75 12.25 L4.25 12.25 L2.75 16.00 Z
                M4.75 11.00 L8.00 2.875 L11.25 11.00 Z
            </x:String>
            <!-- グループ解除アイコンの描画コマンド -->
            <x:String x:Key="data_ungroup">
                M1,1 L11,1 L11,11 L1,11 Z
                M2,2 L10,2 L10,10 L2,10 Z
                M11,5 L15,5 L15,15 L5,15 L5,11 L6,11 L6,14 L14,14 L14,6 L11,6 Z
            </x:String>
            <!-- 開いた矢印アイコンの描画コマンド -->
            <x:String x:Key="data_arrow_opened">
                M0, 8 L9.3, 8 L2.75, 6.52 L3, 5.48 L16, 8.5 L3, 11.52 L2.75, 10.48 L9.3, 9 L0, 9 Z
            </x:String>
            <!-- 閉じた矢印アイコンの描画コマンド -->
            <x:String x:Key="data_arrow_filled">
                M0, 8 L3, 8 L3, 5.48 L16, 8.5 L3, 11.52 L3,9 L0, 9 Z
            </x:String>
            <!-- アプリケーションデータを格納するファイル名 -->
            <!--
            <x:String x:Key="file_app_data">app_data</x:String>
            -->
            <!-- 定規コンテキストメニュー -->
			<MenuFlyout x:Key="mf_ruler_menu">
				<MenuFlyoutItem x:Uid="mfi_stroke_color" Click="stroke_color_click_async" Text="Stroke Color..." />
				<MenuFlyoutItem x:Uid="mfi_fill_color" Click="fill_color_click_async" Text="Fill Color..." />
			</MenuFlyout>
			<!-- 線枠コンテキストメニュー -->
			<MenuFlyout x:Key="mf_stroke_menu">
                <!-- 線枠の種類 -->
                <MenuFlyoutSubItem x:Uid="mfsi_dash_style" Text="Style">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_dash_style_solid_2" x:Uid="rmfi_dash_style_solid" Click="dash_style_click" IsChecked="True" Text="Solid" GroupName="gn_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_line}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<MenuFlyoutSeparator />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_dash_style_dash_2" x:Uid="rmfi_dash_style_dash" Click="dash_style_click" Text="Dash" GroupName="gn_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_dash}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_dash_style_dot_2" x:Uid="rmfi_dash_style_dot" Click="dash_style_click" Text="Dot" GroupName="gn_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_dot}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_dash_style_dash_dot_2" x:Uid="rmfi_dash_style_dash_dot" Click="dash_style_click" Text="Dash Dot" GroupName="gn_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_dash_dot}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_dash_style_dash_dot_dot_2" x:Uid="rmfi_dash_style_dash_dot_dot" Click="dash_style_click" Text="Dash Dot Dot" GroupName="gn_dash_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_dash_dot_dot}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
                </MenuFlyoutSubItem>
                <!-- 破線の様式 -->
                <MenuFlyoutItem x:Name="mfi_dash_patt_2" x:Uid="mfi_dash_patt" Click="dash_patt_click_async" IsEnabled="False" Text="Dash Pattern..." />
				<!-- 線枠の太さ -->
				<MenuFlyoutItem x:Uid="mfi_stroke_width" Click="stroke_width_click_async" Text="Width..." />
                <MenuFlyoutSubItem x:Uid="mfs_cap_style" Text="Cap Style ">
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_cap_flat_2" x:Uid="rmfi_cap_flat" Click="cap_style_click" GroupName="gn_cap_style_2" IsChecked="true" Text="Flat" />
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_cap_square_2" x:Uid="rmfi_cap_square" Click="cap_style_click" GroupName="gn_cap_style_2" Text="Square" />
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_cap_round_2" x:Uid="rmfi_cap_round" Click="cap_style_click" GroupName="gn_cap_style_2" Text="Round" />
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_cap_triangle_2" x:Uid="rmfi_cap_triangle" Click="cap_style_click" GroupName="gn_cap_style_2" Text="Triangle" />
                </MenuFlyoutSubItem>
                <!-- 線分のつなぎ -->
                <MenuFlyoutSubItem x:Uid="mfs_join_style" Text="Join Style ">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_join_round_2" x:Uid="rmfi_join_round" Click="join_style_click" GroupName="gn_join_style_2" Text="Rounded" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_join_bevel_2" x:Uid="rmfi_join_bevel" Click="join_style_click" GroupName="gn_join_style_2" Text="Beveled" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_join_miter_2" x:Uid="rmfi_join_miter" Click="join_style_click" GroupName="gn_join_style_2" IsChecked="true" Text="Miter" />
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_join_m_or_b_2" x:Uid="rmfi_join_m_or_b" Click="join_style_click" GroupName="gn_join_style_2" Text="Miter or Bevel" />
                    <MenuFlyoutSeparator />
					<MenuFlyoutItem x:Name="mfi_join_limit_2" x:Uid="mfi_join_limit" Click="join_limit_click_async" Text="Miter Limit..." />
				</MenuFlyoutSubItem>
                <MenuFlyoutSeparator />
                <!-- 矢じるし -->
                <MenuFlyoutSubItem x:Uid="mfsi_arrow_style" Text="Arrowhead Style">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_arrow_style_none_2" x:Uid="rmfi_arrow_style_none" Click="arrow_style_click" IsChecked="True" Text="None" GroupName="gn_arrow_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_line}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
                    <MenuFlyoutSeparator />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_arrow_style_opened_2" x:Uid="rmfi_arrow_style_opened" Click="arrow_style_click" Text="Opened" GroupName="gn_arrow_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_arrow_opened}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_arrow_style_filled_2" x:Uid="rmfi_arrow_style_filled" Click="arrow_style_click" Text="Filled" GroupName="gn_arrow_style_2">
                        <muxc:RadioMenuFlyoutItem.Icon>
                            <PathIcon Data="{StaticResource data_arrow_filled}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" />
                        </muxc:RadioMenuFlyoutItem.Icon>
                    </muxc:RadioMenuFlyoutItem>
                </MenuFlyoutSubItem>
                <MenuFlyoutItem x:Name="mfi_arrow_size_2" x:Uid="mfi_arrow_size" Click="arrow_size_click_async" IsEnabled="False" Text="Arrowhead Size..." />
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="mfi_stroke_color" Click="stroke_color_click_async" Text="Stroke Color..." />
            </MenuFlyout>
            <!-- 塗りつぶしコンテキストメニュー -->
            <MenuFlyout x:Key="mf_fill_menu">
                <MenuFlyoutItem x:Uid="mfi_fill_color" Click="fill_color_click_async" Text="Fill Color..." />
            </MenuFlyout>
            <!-- 書体コンテキストメニュー -->
            <MenuFlyout x:Key="mf_front_menu">
                <!--文字列の編集 -->
				<MenuFlyoutItem x:Uid="mfi_edit_text" Click="edit_text_click" KeyboardAcceleratorTextOverride="Ctrl+E" Text="Edit Text" >
					<MenuFlyoutItem.Icon>
						<FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource glyph_ibeam}"/>
					</MenuFlyoutItem.Icon>
				</MenuFlyoutItem>
				<!--文字列の検索と置換 -->
				<MenuFlyoutItem x:Uid="mfi_find_text" Click="find_text_click" Icon="Find" KeyboardAcceleratorTextOverride="Ctrl+F" Text="Find/Replace Text" />
                <MenuFlyoutItem x:Uid="mfi_edit_text_frame" Click="edit_text_frame_click" Text="Fit Frame Size to" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource glyph_fit_page}"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <!-- 書体の種類 -->
				<MenuFlyoutItem x:Uid="mfi_font_family" Click="font_family_click_async" Icon="Font" Text="Family..." />
                <MenuFlyoutItem x:Uid="mfi_font_size" Click="font_size_click_async" Icon="FontSize" Text="Size..." />
                <MenuFlyoutItem x:Uid="mfi_font_weight" Click="font_weight_click_async" Icon="Bold" Text="Weight..." />
                <MenuFlyoutItem x:Uid="mfi_font_stretch" Click="font_stretch_click_async" Text="Stretch..."/>
                <MenuFlyoutSubItem x:Uid="mfsi_font_style" Icon="Italic" Text="Style">
                    <muxc:RadioMenuFlyoutItem x:Name="rmfi_font_style_normal_2" x:Uid="rmfi_font_style_normal" Click="font_style_normal_click" IsChecked="True" Text="Normal" GroupName="gn_font_style_2"/>
                    <MenuFlyoutSeparator />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_font_style_oblique_2" x:Uid="rmfi_font_style_oblique" Click="font_style_oblique_click" Text="Normal" GroupName="gn_font_style_2"/>
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_font_style_italic_2" x:Uid="rmfi_font_style_italic" Click="font_style_italic_click" Text="Normal" GroupName="gn_font_style_2"/>
                </MenuFlyoutSubItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutSubItem x:Uid="mfsi_text_align_t" Icon="AlignLeft" Text="Text Alignment">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_left_2" x:Uid="rmfi_text_align_left" Click="text_align_t_click" IsChecked="True" Text="Left" GroupName="gn_text_align_t_2" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_right_2" x:Uid="rmfi_text_align_right" Click="text_align_t_click" Text="Right" GroupName="gn_text_align_t_2" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_center_2" x:Uid="rmfi_text_align_center" Click="text_align_t_click" Text="Center" GroupName="gn_text_align_t_2" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_just_2" x:Uid="rmfi_text_align_just" Click="text_align_t_click" Text="Justified" GroupName="gn_text_align_t_2" />
				</MenuFlyoutSubItem>
                <MenuFlyoutSubItem x:Uid="mfsi_text_align_p" Text="Paragraph Alignment">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_top_2" x:Uid="rmfi_text_align_top" Click="text_align_p_click" IsChecked="True" Text="Top" GroupName="gn_text_align_p_2" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_bot_2" x:Uid="rmfi_text_align_bot" Click="text_align_p_click" Text="Bottom" GroupName="gn_text_align_p_2" />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_mid_2" x:Uid="rmfi_text_align_mid" Click="text_align_p_click" Text="Middle" GroupName="gn_text_align_p_2" />
				</MenuFlyoutSubItem>
                <MenuFlyoutItem x:Uid="mfi_text_line_sp" Click="text_line_sp_click_async" Text="Line Space" />
                <MenuFlyoutItem x:Uid="mfi_text_padding" Click="text_padding_click_async" Text="Margin..." />
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="mfi_font_color" Click="font_color_click_async" Icon="FontColor" Text="Font Color..." />
            </MenuFlyout>
            <!-- 用紙コンテキストメニュー -->
            <MenuFlyout x:Key="mf_sheet_menu">
                <MenuFlyoutSubItem x:Uid="mfsi_grid_show" Text="Show Grid">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_grid_show_hide_2" x:Uid="rmfi_grid_show_hide" Click="grid_show_click" Text="Hide" GroupName="gn_grid_show_2"/>
                    <MenuFlyoutSeparator />
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_grid_show_back_2" x:Uid="rmfi_grid_show_back" Click="grid_show_click" IsChecked="True" Text="Back" GroupName="gn_grid_show_2"/>
