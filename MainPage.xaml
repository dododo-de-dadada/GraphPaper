                </MenuFlyoutSubItem>
                <ToggleMenuFlyoutItem x:Name="tmfi_grid_snap_2" x:Uid="tmfi_grid_snap" Click="grid_snap_click" Text="Snap to Grid" />
                <MenuFlyoutSubItem x:Uid="mfsi_grid_len" Text="Size Grid">
                    <MenuFlyoutItem x:Uid="mfi_grid_len_con" Click="grid_len_con_click" Text="Condense" />
                    <MenuFlyoutItem x:Uid="mfi_grid_len_exp" Click="grid_len_exp_click" Text="Expand" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem x:Uid="mfi_grid_len" Click="grid_len_click_async" Text="Length..." />
                </MenuFlyoutSubItem>
                <MenuFlyoutItem x:Uid="mfi_grid_color" Click="grid_color_click_async" Text="Grid Color..." />
				<MenuFlyoutSubItem x:Uid="mfsi_grid_emph" Text="Grid Emphasis">
