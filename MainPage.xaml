<Page
	x:Class="GraphPaper.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:GraphPaper"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="Page_Loaded"
	mc:Ignorable="d">
	<!-- x:Name はコードビハインドのためのオブジェクトをつくる. x:Uid はリソースの参照をつくる. -->
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Dictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="{StaticResource AppBarExpandButtonThemeWidthGridLength}"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<!-- メインメニュー -->
		<muxc:MenuBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
					  Background="{ThemeResource AppBarBackgroundThemeBrush}" Height="Auto">
			<!-- ファイルメニュー -->
			<muxc:MenuBarItem x:Uid="mbi_file" AccessKey="F" Title="File" >
				<MenuFlyoutItem
					x:Uid="mfi_new" Click="file_new_click_async" Icon="Page2" Text="New" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="N" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Uid="mfi_file_open" Click="file_open_click_async" Icon="OpenFile"
					Text="Open...">
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="O" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Uid="mfi_file_save" Click="file_save_click_async" Icon="Save" Text="Save" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="S" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Uid="mfi_file_save_as" Click="file_save_as_click_async" Text="Save As..." >
					<MenuFlyoutItem.Icon>
						<FontIcon
							FontFamily="{StaticResource SymbolThemeFontFamily}" 
							Glyph="{StaticResource glyph_save_as}" />
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="S" Modifiers="Control,Shift" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Uid="mfi_file_import_image" Click="file_import_image_click_async"
					Icon="Import" Text="Import Image..." >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="I" Modifiers="Control,Shift" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Uid="mfi_file_export_as" Click="file_export_as_click_async"
					Text="Export As..." >
					<MenuFlyoutItem.Icon>
						<FontIcon
							FontFamily="{StaticResource SymbolThemeFontFamily}"
							Glyph="{StaticResource glyph_export}" />
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="E" Modifiers="Control,Shift" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutSeparator />
				<MenuFlyoutSubItem
                    x:Uid="mfsi_file_recent" Text="Recent Files" >
					<MenuFlyoutSubItem.Icon>
						<FontIcon
							FontFamily="{StaticResource SymbolThemeFontFamily}"
							Glyph="{StaticResource glyph_recent}" />
					</MenuFlyoutSubItem.Icon>
					<MenuFlyoutItem
						x:Name="mfi_file_recent_1" Click="file_recent_click_async" Text="" >
						<MenuFlyoutItem.Icon>
							<FontIcon
								FontFamily="{StaticResource SymbolThemeFontFamily}" 
								Glyph="{StaticResource glyph_dial1}" />
						</MenuFlyoutItem.Icon>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_file_recent_2" Click="file_recent_click_async" Text="" >
						<MenuFlyoutItem.Icon>
							<FontIcon
								FontFamily="{StaticResource SymbolThemeFontFamily}"
								Glyph="{StaticResource glyph_dial2}" />
						</MenuFlyoutItem.Icon>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_file_recent_3" Click="file_recent_click_async" Text="" >
						<MenuFlyoutItem.Icon>
							<FontIcon
								FontFamily="{StaticResource SymbolThemeFontFamily}"
								Glyph="{StaticResource glyph_dial3}" />
						</MenuFlyoutItem.Icon>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_file_recent_4" Click="file_recent_click_async" Text="" >
						<MenuFlyoutItem.Icon>
							<FontIcon
								FontFamily="{StaticResource SymbolThemeFontFamily}"
								Glyph="{StaticResource glyph_dial4}" />
						</MenuFlyoutItem.Icon>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_file_recent_5" Click="file_recent_click_async" Text="" >
						<MenuFlyoutItem.Icon>
							<FontIcon
								FontFamily="{StaticResource SymbolThemeFontFamily}"
								Glyph="{StaticResource glyph_dial5}" />
						</MenuFlyoutItem.Icon>
					</MenuFlyoutItem>
				</MenuFlyoutSubItem>
				<MenuFlyoutSeparator />
				<!---
				<MenuFlyoutItem x:Name="mfi_print" x:Uid="mfi_print" Click="print_click_async" Icon="Print" Text="Print..." >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="P" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				-->
				<MenuFlyoutItem
					x:Uid="mfi_exit" Click="file_exit_click_async" Icon="Cancel" Text="Exit" />
			</muxc:MenuBarItem>
			<!-- 編集メニュー -->
			<muxc:MenuBarItem x:Name="mbi_edit" x:Uid="mbi_edit" AccessKey="E" Title="Edit">
				<MenuFlyoutItem
					x:Name="mfi_undo" x:Uid="mfi_undo" Click="ustack_undo_click" Icon="Undo"
					IsEnabled="False" Text="Undo" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="Z" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_redo" x:Uid="mfi_redo" Click="ustack_redo_click" Icon="Redo"
					IsEnabled="False" Text="Redo" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="Y" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutSeparator />
				<MenuFlyoutItem
					x:Name="mfi_xcvd_cut" x:Uid="mfi_xcvd_cut" Click="xcvd_cut_click_async"
					Icon="Cut" IsEnabled="False" Text="Cut" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="X" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_xcvd_copy" x:Uid="mfi_xcvd_copy" Click="xcvd_copy_click_async"
					Icon="Copy" IsEnabled="False" Text="Copy" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="C" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_xcvd_paste" x:Uid="mfi_xcvd_paste" Click="xcvd_paste_click"
					Icon="Paste" IsEnabled="False" Text="Paste" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="V" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_xcvd_delete" x:Uid="mfi_xcvd_delete" Click="xcvd_delete_click"
					Icon="Delete" IsEnabled="False" Text="Delete" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="D" Modifiers="Control" />
						<KeyboardAccelerator Key="Delete" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutSeparator />
				<MenuFlyoutItem
					x:Name="mfi_select_all" x:Uid="mfi_select_all" Click="select_all_click"
					Icon="SelectAll" IsEnabled="False" Text="Select All" >
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="A" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutSubItem x:Name="mfsi_order" x:Uid="mfsi_order" Text="Order">
					<MenuFlyoutSubItem.Icon>
						<FontIcon
							FontFamily="{StaticResource SymbolThemeFontFamily}"
							Glyph="{StaticResource glyph_order}" />
					</MenuFlyoutSubItem.Icon>
					<MenuFlyoutItem
						x:Name="mfi_bring_to_front" x:Uid="mfi_bring_to_front"
						Click="order_bring_to_front_click" IsEnabled="false"
						Text="Bring to Front" >
						<MenuFlyoutItem.KeyboardAccelerators>
							<KeyboardAccelerator Key="End" Modifiers="Control" />
						</MenuFlyoutItem.KeyboardAccelerators>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_bring_forward" x:Uid="mfi_bring_forward"
						Click="order_bring_forward_click" IsEnabled="false" Text="Bring Forward">
						<MenuFlyoutItem.KeyboardAccelerators>
							<KeyboardAccelerator Key="PageDown" Modifiers="Control" />
						</MenuFlyoutItem.KeyboardAccelerators>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_send_backward" x:Uid="mfi_send_backward"
						Click="order_send_backward_click" IsEnabled="false" Text="Send Backward" >
						<MenuFlyoutItem.KeyboardAccelerators>
							<KeyboardAccelerator Key="PageUp" Modifiers="Control" />
						</MenuFlyoutItem.KeyboardAccelerators>
					</MenuFlyoutItem>
					<MenuFlyoutItem
						x:Name="mfi_send_to_back" x:Uid="mfi_send_to_back"
						Click="order_send_to_back_click" IsEnabled="false" Text="Send to Back">
						<MenuFlyoutItem.KeyboardAccelerators>
							<KeyboardAccelerator Key="Home" Modifiers="Control" />
						</MenuFlyoutItem.KeyboardAccelerators>
					</MenuFlyoutItem>
				</MenuFlyoutSubItem>
				<MenuFlyoutSeparator />
					<MenuFlyoutItem
						x:Name="mfi_group" x:Uid="mfi_group" Click="group_click" IsEnabled="false"
						Text="Group" >
					<MenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_group}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="G" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_ungroup" x:Uid="mfi_ungroup" Click="ungroup_click"
					IsEnabled="false" Text="Ungroup" >
					<MenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_ungroup}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="U" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutSeparator />
				<MenuFlyoutItem
					x:Name="mfi_edit_arc" x:Uid="mfi_edit_arc" Click="edit_arc_click_async"
					Text="Edit Arc" >
					<MenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_arc}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="R" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_edit_text" x:Uid="mfi_edit_text" Click="edit_text_click_async"
					Text="Edit Text" >
					<MenuFlyoutItem.Icon>
						<FontIcon
							FontFamily="{StaticResource SymbolThemeFontFamily}"
							Glyph="{StaticResource glyph_ibeam}"/>
					</MenuFlyoutItem.Icon>
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="E" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
				<MenuFlyoutItem
					x:Name="mfi_find_text" x:Uid="mfi_find_text" Click="find_text_click"
					Icon="Find" Text="Find/Replace Text">
					<MenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="F" Modifiers="Control" />
					</MenuFlyoutItem.KeyboardAccelerators>
				</MenuFlyoutItem>
			</muxc:MenuBarItem>
			<!-- 作図メニュー -->
			<muxc:MenuBarItem x:Uid="mbi_drawing" AccessKey="D" Title="Drawing">
				<!-- 選択ツール -->
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_selection_tool" x:Uid="rmfi_selection_tool"
					Click="drawing_tool_click" GroupName="gn_tool_type" IsChecked="True"
					KeyboardAcceleratorTextOverride="Esc" Text="Selection Tool">
					<muxc:RadioMenuFlyoutItem.KeyboardAccelerators>
						<KeyboardAccelerator Key="Escape" />
					</muxc:RadioMenuFlyoutItem.KeyboardAccelerators>
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_select}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<MenuFlyoutSeparator />
				<!-- 方形 -->
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_rect" x:Uid="rmfi_drawing_rect"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Rectangle">
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_rect}" HorizontalAlignment="Center" 
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_rrect" x:Uid="rmfi_drawing_rrect"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Rounded Rectangle">
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_rrect}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_poly" x:Uid="rmfi_drawing_poly"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Quadrangle">
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_polygon}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_ellipse" x:Uid="rmfi_drawing_ellipse"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Ellipse">
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_ellipse}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_arc" x:Uid="rmfi_drawing_arc"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Arc">
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_arc}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_line" x:Uid="rmfi_drawing_line"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Line" >
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_line}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_bezier" x:Uid="rmfi_drawing_bezier"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Curve" >
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_bezier}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem 
					x:Name="rmfi_drawing_text" x:Uid="rmfi_drawing_text"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Text" >
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon 
							Data="{StaticResource data_text}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_drawing_ruler" x:Uid="rmfi_drawing_ruler"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Ruler" >
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon
							Data="{StaticResource data_ruler}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<muxc:RadioMenuFlyoutItem
					x:Name="rmfi_tool_eyedropper" x:Uid="rmfi_tool_eyedropper"
					Click="drawing_tool_click" GroupName="gn_tool_type" Text="Eyedropper" >
					<muxc:RadioMenuFlyoutItem.Icon>
						<PathIcon 
							Data="{StaticResource data_eyedropper}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</muxc:RadioMenuFlyoutItem.Icon>
				</muxc:RadioMenuFlyoutItem>
				<MenuFlyoutSeparator />
				<MenuFlyoutSubItem x:Uid="mfsi_drawing_poly_opt" Text="Polygon Option">
					<MenuFlyoutSubItem.Icon>
						<FontIcon 
							FontFamily="{StaticResource SymbolThemeFontFamily}" 
							Glyph="{StaticResource glyph_draw}"/>
					</MenuFlyoutSubItem.Icon>
					<muxc:RadioMenuFlyoutItem 
						x:Name="rmfi_drawing_poly_di" x:Uid="rmfi_drawing_poly_di"
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Digon (2)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_tri" x:Uid="rmfi_drawing_poly_tri"
						Click="drawing_tool_click" IsChecked="True" GroupName="gn_poly_type"
						Text="Triangle (3)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_quad" x:Uid="rmfi_drawing_poly_quad" 
						Click="drawing_tool_click" GroupName="gn_poly_type"
						Text="Quadrilateral (4)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_pent" x:Uid="rmfi_drawing_poly_pent"
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Pentagon (5)" />
					<muxc:RadioMenuFlyoutItem 
						x:Name="rmfi_drawing_poly_hexa" x:Uid="rmfi_drawing_poly_hexa" 
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Hexagon (6)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_hept" x:Uid="rmfi_drawing_poly_hept"
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Heptagon (7)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_octa" x:Uid="rmfi_drawing_poly_octa"
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Octagon (8)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_nona" x:Uid="rmfi_drawing_poly_nona" 
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Nonagon (9)" />
					<muxc:RadioMenuFlyoutItem 
						x:Name="rmfi_drawing_poly_deca" x:Uid="rmfi_drawing_poly_deca" 
						Click="drawing_tool_click" GroupName="gn_poly_type" Text="Decagon (10)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_hendeca" x:Uid="rmfi_drawing_poly_hendeca"
						Click="drawing_tool_click" GroupName="gn_poly_type"
						Text="Hendecagon (11)" />
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_drawing_poly_dodeca" x:Uid="rmfi_drawing_poly_dodeca"
						Click="drawing_tool_click" GroupName="gn_poly_type" 
						Text="Dedecagon (12)" />
					<MenuFlyoutSeparator />
					<ToggleMenuFlyoutItem
						x:Name="tmfi_tool_poly_regular" x:Uid="tmfi_tool_poly_regular"
						Click="drawing_tool_click" IsChecked="true" Text="Reguler Polygon" />
					<ToggleMenuFlyoutItem
						x:Name="tmfi_tool_poly_vertex_up" x:Uid="tmfi_tool_poly_vertex_up" 
						Click="drawing_tool_click" IsChecked="true" Text="Vertex Up" />
					<ToggleMenuFlyoutItem
						x:Name="tmfi_tool_poly_end_close" x:Uid="tmfi_tool_poly_end_close"
						Click="drawing_tool_click" IsChecked="true" Text="End Close" />
					<ToggleMenuFlyoutItem
						x:Name="tmfi_tool_poly_clockwise" x:Uid="tmfi_tool_poly_clockwise"
						Click="drawing_tool_click" IsChecked="true" Text="Clockwise" />
				</MenuFlyoutSubItem>
			</muxc:MenuBarItem>
			<!-- 線枠メニュー -->
			<muxc:MenuBarItem
				x:Name="mbi_properties" x:Uid="mbi_properties" AccessKey="P" Title="Properties">
				<MenuFlyoutSubItem x:Name="mfsi_dash_style" x:Uid="mfsi_dash_style" Text="Style">
					<MenuFlyoutSubItem.Icon>
						<PathIcon
							Data="{StaticResource data_dash_style}" HorizontalAlignment="Center"
							VerticalAlignment="Center" Width="16" Height="16" />
					</MenuFlyoutSubItem.Icon>
					<muxc:RadioMenuFlyoutItem
						x:Name="rmfi_dash_style_solid" x:Uid="rmfi_dash_style_solid"
						Click="dash_style_click" IsChecked="True" Text="Solid"
						GroupName="gn_dash_style">
						<muxc:RadioMenuFlyoutItem.Icon>
							<PathIcon
								Data="{StaticResource data_line}" HorizontalAlignment="Center"
								VerticalAlignment="Center" Width="16" Height="16" />
						</muxc:RadioMenuFlyoutItem.Icon>
