					<MenuFlyoutItem x:Name="rmfi_join_limit_2" x:Uid="rmfi_join_limit" Click="join_limit_click_async" Text="Miter Limit..." />
				</MenuFlyoutSubItem>
                <MenuFlyoutSeparator />
