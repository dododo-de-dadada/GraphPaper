					<muxc:RadioMenuFlyoutItem x:Name="rmfi_text_align_mid_2" x:Uid="rmfi_text_align_mid" Click="text_align_p_mid_click" Text="Middle" GroupName="gn_text_align_p_2">
					</muxc:RadioMenuFlyoutItem>
                </MenuFlyoutSubItem>
                <MenuFlyoutSubItem x:Uid="mfsi_text_line" Text="Line Height">
                    <MenuFlyoutItem x:Uid="mfi_text_line_con" Click="text_line_con_click" Text="Condense" />
                    <MenuFlyoutItem x:Uid="mfi_text_line_exp" Click="text_line_exp_click" Text="Expand" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem x:Uid="mfi_text_line" Click="text_line_click_async" Text="Height" />
                </MenuFlyoutSubItem>
                <MenuFlyoutItem x:Uid="mfi_text_margin" Click="text_margin_click_async" Text="Margin..." />
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="mfi_font_color" Click="font_color_click_async" Text="Color..." />
            </MenuFlyout>
            <!-- 用紙コンテキストメニュー -->
            <MenuFlyout x:Key="mf_sheet">
                <MenuFlyoutSubItem x:Uid="mfsi_grid_show" Text="Show Grid">
					<muxc:RadioMenuFlyoutItem x:Name="rmfi_grid_show_hide_2" x:Uid="rmfi_grid_show_hide" Click="grid_show_click" Text="Hide" GroupName="gn_grid_show_2"/>
